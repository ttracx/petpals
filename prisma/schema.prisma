generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  pets          Pet[]
  stripeCustomerId String?
  subscriptionId   String?
  subscriptionStatus String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Pet {
  id          String   @id @default(cuid())
  name        String
  species     String   // dog, cat, bird, fish, reptile, other
  breed       String?
  birthDate   DateTime?
  weight      Float?
  color       String?
  microchipId String?
  imageUrl    String?
  notes       String?  @db.Text
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  vetVisits   VetVisit[]
  medications Medication[]
  feedingSchedules FeedingSchedule[]
  photos      Photo[]
  healthRecords HealthRecord[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model VetVisit {
  id          String   @id @default(cuid())
  petId       String
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  visitDate   DateTime
  reason      String
  diagnosis   String?  @db.Text
  treatment   String?  @db.Text
  vetName     String?
  vetClinic   String?
  cost        Float?
  notes       String?  @db.Text
  nextVisit   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Medication {
  id          String   @id @default(cuid())
  petId       String
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  name        String
  dosage      String
  frequency   String   // daily, twice-daily, weekly, as-needed
  startDate   DateTime
  endDate     DateTime?
  timeOfDay   String?  // morning, afternoon, evening, night
  instructions String? @db.Text
  refillDate  DateTime?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model FeedingSchedule {
  id          String   @id @default(cuid())
  petId       String
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  mealName    String   // breakfast, lunch, dinner, snack
  time        String   // HH:MM format
  foodType    String
  portion     String
  notes       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Photo {
  id          String   @id @default(cuid())
  petId       String
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  url         String
  caption     String?
  takenAt     DateTime @default(now())
  createdAt   DateTime @default(now())
}

model HealthRecord {
  id          String   @id @default(cuid())
  petId       String
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)
  recordDate  DateTime
  recordType  String   // weight, vaccination, allergy, condition, surgery
  title       String
  value       String?
  unit        String?
  notes       String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
